  function getInitials(name) {
    if (!name) return "U"; // Default to "U" if no name is provided

    const words = name.trim().split(" ");
    let initials = words[0][0]; // First letter of the first word

    if (words.length > 1) {
      initials += words[words.length - 1][0]; // First letter of the last word
    }

    return initials.toUpperCase();
  }

  const initials = getInitials(user.name); // Assuming 'user.name' is passed from the server
%>
