<%- include('partials/header.ejs') %>

  <div class="flex h-screen">
    <!-- Sidebar (same as dashboard) -->

    <%- include('partials/sidebar.ejs') %>

      <!-- Main Content -->
      <div class="flex-1 flex flex-col overflow-hidden">
        <!-- Top Navigation (remains the same) -->
        <%- include('partials/topbar.ejs') %>


          <!-- Main Content Area -->
          <main class="flex-1 overflow-y-auto bg-dark-900 p-6">
            <div class="max-w-4xl mx-auto">
              <!-- Page Header -->
              <div class="mb-8">
                <h1 class="text-2xl font-bold">Create New Deployment</h1>
                <p class="text-gray-400 mt-1">Deploy your project from a Git repository or upload your files</p>
              </div>

              <!-- Consolidated Deployment Form -->
              <form action="/api/v1/deploy" method="POST" id="deploymentForm">
                <!-- Deployment Source -->
                <div class="bg-dark-800 rounded-lg border border-dark-600 overflow-hidden mb-8">
                  <div class="p-6 border-b border-dark-600">
                    <h2 class="text-lg font-medium">Deployment Source</h2>
                  </div>
                  <div class="p-6">

                    <!-- Project Name -->
                    <div class="mb-6">
                      <label for="projectName" class="block text-sm font-medium mb-2">Project Name</label>
                      <input required type="text" id="projectName" name="projectName" placeholder="my-project"
                        class="w-full bg-dark-700 border border-dark-600 rounded-md px-4 py-2 focus:outline-none focus:ring-1 focus:ring-gray-500">
                      <p id="projectNameError" class="mt-2 text-xs text-red-500 hidden">Invalid format. Use lowercase
                        and '-'</p>
                      <p id="projectNameAvailability" class="mt-2 text-xs hidden"></p>
                    </div>

                    <!-- Repository Selection -->
                    <div class="mb-6">
                      <label class="block text-sm font-medium mb-2">Repository Source</label>
                      <div class="flex space-x-4 mb-4">

                        <div class="flex w-full items-center bg-dark-700 ps-4 border border-zinc-600 rounded-lg">
                          <input checked id="bordered-radio-1" type="radio" value="github" name="repoSource"
                            class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 ">
                          <label for="bordered-radio-1"
                            class="w-full inline-flex py-4 ms-2 text-sm font-medium text-gray-100 ">
