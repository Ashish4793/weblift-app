    const projectNameInput = document.getElementById("projectName");
    const projectNameError = document.getElementById("projectNameError");
    const projectNameAvailability = document.getElementById("projectNameAvailability");

    let typingTimer;
    const debounceDelay = 1500; // 2 seconds

    // Allowed format: only lowercase letters and '-'
    const nameRegex = /^[a-z-]+$/;

    projectNameInput.addEventListener("input", () => {
      projectNameAvailability.classList.remove("text-green-500");
      projectNameAvailability.classList.remove("text-green-500");
      projectNameAvailability.textContent = "Checking name availability...";
      projectNameAvailability.classList.add("text-zinc-400");


      clearTimeout(typingTimer);

      const name = projectNameInput.value.trim();

      // Validate format
      if (!nameRegex.test(name)) {
        projectNameError.classList.remove("hidden");
        projectNameAvailability.classList.add("hidden");

        return;
      } else {
        projectNameError.classList.add("hidden");
      }

      // Debounce API request
      typingTimer = setTimeout(() => {
        checkProjectNameAvailability(name);
      }, debounceDelay);
    });

    async function checkProjectNameAvailability(name) {
      try {

        const response = await fetch(`/api/v1/project-name-availability?name=${name}`);
        const data = await response.json();
        projectNameAvailability.classList.remove("hidden");


        if (data.available) {
          projectNameAvailability.textContent = `✅ ${name}  is available!`;
          projectNameAvailability.classList.remove("text-red-500");
          projectNameAvailability.classList.add("text-green-500");
        } else {
          document.getElementById('projectName').value = ''
          projectNameAvailability.textContent = `❌ ${name} is already taken.`;
          projectNameAvailability.classList.remove("text-green-500");
          projectNameAvailability.classList.add("text-red-500");
        }
      } catch (error) {
        console.error("Error checking project name availability:", error);
        projectNameAvailability.textContent = "⚠️ Error checking availability.";
        projectNameAvailability.classList.remove("text-green-500");
        projectNameAvailability.classList.add("text-red-500");
      }
    }
  </script>

